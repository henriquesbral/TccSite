@using TccSite.Web.ViewModels
@model IEnumerable<UsuarioViewModel>
@{
    ViewData["Title"] = "Administração de Usuários";
}

<style>
    /* ======== BASE ======== */
    body:not(.no-offwhite) main.page-content {
        background-color: #f8f9fa; /* offwhite suave */
        min-height: 100vh;
        padding-top: 40px;
        padding-bottom: 40px;
    }

    .btn-gradient {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        font-weight: 500;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #0096c7, #48cae4);
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-action {
        min-width: 120px;
        padding: 8px 16px;
        font-weight: 500;
        border-radius: 8px;
        transition: 0.2s ease-in-out;
    }

    .btn-edit {
        background-color: #0d6efd;
        color: white;
    }

        .btn-edit:hover {
            background-color: #0b5ed7;
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #bb2d3b;
            transform: scale(1.05);
        }

    .card {
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        border: none;
        background-color: #fff;
    }

    .table th {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: #fff;
        text-align: center;
        font-weight: 600;
    }

    .table-striped tbody tr:hover {
        background-color: #f1faff;
    }

    .modal-header {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: white;
    }

    .form-control:focus {
        border-color: #00b4d8;
        box-shadow: 0 0 0 0.2rem rgba(0,183,255,0.25);
    }

    .badge-role {
        background: #0077b6;
        color: white;
        font-size: 0.85rem;
        border-radius: 0.5rem;
        padding: 0.25rem 0.5rem;
    }
</style>

<main class="page-content">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
            <h2 class="fw-semibold text-primary mb-3">
                <i class="bi bi-people-fill me-2"></i> Administração de Usuários
            </h2>

            <button type="button" class="btn btn-gradient d-flex align-items-center gap-2"
                    data-bs-toggle="modal" data-bs-target="#createUsuarioModal">
                <i class="bi bi-person-plus-fill"></i> Novo Usuário
            </button>
        </div>

        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
                <div class="input-group" style="max-width: 320px;">
                    <span class="input-group-text bg-light border-0">
                        <i class="bi bi-search text-primary"></i>
                    </span>
                    <input type="text" id="searchUser" class="form-control" placeholder="Pesquisar usuário..." />
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0" id="usuariosTable">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person-fill"></i> Nome</th>
                            <th><i class="bi bi-envelope-fill"></i> Email</th>
                            <th><i class="bi bi-shield-lock-fill"></i> Perfil</th>
                            <th style="width:200px;"><i class="bi bi-gear-fill"></i> Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.Nome</td>
                                <td>@e.Email</td>
                                <td><span class="badge-role">@e.CodPerfilUsuario</span></td>
                                <td class="text-center d-flex justify-content-center gap-2">
                                    <button type="button"
                                            class="btn btn-action btn-edit edit-btn"
                                            data-bs-toggle="modal"
                                            data-bs-target="#editUsuarioModal"
                                            data-id="@e.CodUsuario"
                                            data-nome="@e.Nome"
                                            data-email="@e.Email"
                                            data-perfil="@e.CodPerfilUsuario">
                                        <i class="bi bi-pencil-square me-1"></i> Editar
                                    </button>
                                    <button type="button"
                                            class="btn btn-action btn-delete"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteUsuarioModal"
                                            data-id="@e.CodUsuario"
                                            data-nome="@e.Nome">
                                        <i class="bi bi-trash me-1"></i> Apagar
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<!-- Modal de Criação -->
<div class="modal fade" id="createUsuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="createUsuarioForm">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-plus-fill me-2"></i> Novo Usuário
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" name="Nome" class="form-control" placeholder="Nome completo" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Sobrenome</label>
                        <input type="text" name="Sobrenome" class="form-control" placeholder="Sobrenome" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="exemplo@email.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">CPF</label>
                        <input type="text" name="CPF" class="form-control" placeholder="000.000.000-00" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Telefone</label>
                        <input type="text" name="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Perfil de Acesso</label>
                        <select name="PerfilUsuario" class="form-select">
                            <option value="Administrador">Administrador</option>
                            <option value="Usuário">Usuário</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-save2 me-1"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Edição -->
<div class="modal fade" id="editUsuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form class="editUsuarioForm">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Editar Usuário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="CodUsuario" />
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nome</label>
                        <input type="text" name="Nome" class="form-control" placeholder="Nome completo" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="exemplo@email.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Perfil de Acesso</label>
                        <select name="PerfilUsuario" class="form-select">
                            <option value="Administrador">Administrador</option>
                            <option value="Usuário">Usuário</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-gradient">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de Exclusão -->
<div class="modal fade" id="deleteUsuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o usuário <strong id="usuarioNomeExcluir"></strong>?</p>
                <input type="hidden" id="usuarioIdExcluir" />
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash-fill me-1"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/admUsuarios.js"></script>
}