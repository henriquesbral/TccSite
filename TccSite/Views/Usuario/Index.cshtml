@using TccSite.Domain
@using TccSite.Domain.ViewModels
@model IEnumerable<UsuarioViewModel>
@{
    ViewData["Title"] = "Administração de Usuários";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <h4 class="mb-0">👤 Administração de Usuários</h4>
            <a asp-action="Criar" class="btn btn-success">➕ Novo Usuário</a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Perfil</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Email</td>
                            <td><span class="badge bg-info">@usuario.CodPerfilUsuario</span></td>
                            <td>
                                <a asp-action="Editar" asp-route-id="@usuario.CodUsuario" class="btn btn-sm btn-warning">✏️</a>
                                <a asp-action="Excluir" asp-route-id="@usuario.CodUsuario" class="btn btn-sm btn-danger">🗑️</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/admUsuarios.js"></script>
