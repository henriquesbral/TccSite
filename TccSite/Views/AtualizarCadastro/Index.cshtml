@using TccSite.Domain
@using TccSite.Web.ViewModels
@model TccSite.Web.ViewModels.EditarCadastroViewModel
@{
    Layout = "_Layout";
}

<style>
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1;
    }

    .page-container {
        min-height: calc(100vh - 50px); 
        padding-top: 30px; 
        background-color: #f8f9fa; /* cor de fundo suave */
    }
</style>

<main class="page-container">
    <div class="container-fluid px-4">
        <div class="card shadow rounded-5 p-4">
            <div class="row mb-4 align-items-center">
                <div class="col-md-3 text-center">
                    <img src="@(Model.ImagemUrl ?? "/Assets/imagens/user.jpeg")"
                         alt="Imagem do Usuário"
                         class="img-thumbnail rounded-circle"
                         style="width: 300px; height: 300px; object-fit: cover;">

                    <input asp-for="ImagemPerfil" type="file" class="form-control mt-2" />
                </div>
                <div class="col-md-9">
                    <h3 class="mb-3" style="font-weight: 500;">Atualizar Informações do Cadastro</h3>

                    <form asp-action="Edit" asp-controller="Usuario" method="post" enctype="multipart/form-data" class="row g-3">
                        <input type="hidden" asp-for="CodUsuario" />

                        <div class="col-md-6">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Sobrenome" class="form-label"></label>
                            <input asp-for="Sobrenome" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="DataNascimento" class="form-label"></label>
                            <input asp-for="DataNascimento" type="date" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Telefone" class="form-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="CPF" class="form-label"></label>
                            <input asp-for="CPF" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Endereco" class="form-label"></label>
                            <input asp-for="Endereco" class="form-control" />
                        </div>

                        <div class="col-md-2">
                            <label asp-for="CEP" class="form-label"></label>
                            <input asp-for="CEP" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Cidades" class="form-label"></label>
                            <input asp-for="Cidades" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Estados" class="form-label"></label>
                            <select asp-for="Estados" class="form-select">
                                <option value="">Selecione</option>
                                <option>SP</option>
                                <option>RJ</option>
                                <option>MG</option>
                            </select>
                        </div>

                        <div class="col-12 d-grid mt-4">
                            <button type="submit" class="btn btn-secondary btn-lg">Atualizar Cadastro</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Scripts -->
<script src="/js/atualizarCadastro.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>