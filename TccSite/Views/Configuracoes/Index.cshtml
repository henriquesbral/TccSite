@using TccSite.Models.ViewModels
@model ConfiguracoesViewModel
@{
    ViewData["Title"] = "Configurações do Sistema";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">⚙️ Configurações do Sistema</h4>
        </div>
        <div class="card-body">
            <form asp-action="SalvarConfiguracoes" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Nível de Atenção (m)</label>
                        <input asp-for="NivelAtencao" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nível Crítico (m)</label>
                        <input asp-for="NivelCritico" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Frequência de Captura (min)</label>
                        <input asp-for="FrequenciaCaptura" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Destinatários de Alerta</label>
                        <textarea asp-for="EmailsAlerta" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">💾 Salvar</button>
            </form>
        </div>
    </div>
</div>
